// Place your settings in this file to overwrite default and user settings.
{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/scripts/**/*.js": true,
    "**/scripts/**/*.js.map": true,
    "**/src/**/*.js": {
      "when": "$(basename).ts" 
    },
    "**/src/**/*.js.map": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true
  },
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "git.enabled": false
}
