{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "removeComments": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "lib": ["es2017", "dom", "webworker", "es6"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@<%= npmScope %>/*": ["../../libs/*"],
      "@<%= npmScope %>/nativescript": ["../../xplat/nativescript/index.ts"],
      "@<%= npmScope %>/nativescript/*": ["../../xplat/nativescript/*"],
      "*": ["./node_modules/tns-core-modules/*", "./node_modules/*"]
    }
  },
  "files": [
    "./references.d.ts",
    "./src/app.module.ngfactory.d.ts",
    "./src/main.ts"
  ],
  "include": [
    "src/**/*.module.ts",
    "../../xplat/**/*.{ios,android}.ts",
    "../../xplat/nativescript/workers/**/*.worker.ts"
  ],
  "exclude": ["../../xplat/nativescript/plugins/**/node_modules/**"]
}
