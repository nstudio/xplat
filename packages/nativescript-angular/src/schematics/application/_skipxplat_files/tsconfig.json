{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "lib": ["es2018", "es2017", "dom", "webworker", "es6"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@<%= npmScope %>/*": ["<%= pathOffset %>libs/*"]
    }
  },
  "exclude": ["node_modules", "platforms"]
}
