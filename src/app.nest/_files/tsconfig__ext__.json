{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "../../dist/apps/<%= utils.sanitize(name) %>",
    "typeRoots": ["../../node_modules/@types"],
    "types": ["node", "jest"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "../../node_modules",
    "**/*.spec.ts",
    "node_modules/@types/jasmine/**/*"
  ]
}
