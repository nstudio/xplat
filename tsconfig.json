{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "typeRoots": ["node_modules/@types"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "lib": ["es2018"],
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@nstudio/angular": ["./packages/angular"],
      "@nstudio/angular/*": ["./packages/angular/*"],
      "@nstudio/electron": ["./packages/electron"],
      "@nstudio/electron/*": ["./packages/electron/*"],
      "@nstudio/focus": ["./packages/focus"],
      "@nstudio/focus/*": ["./packages/focus/*"],
      "@nstudio/ionic": ["./packages/ionic"],
      "@nstudio/ionic/*": ["./packages/ionic/*"],
      "@nstudio/nativescript": ["./packages/nativescript"],
      "@nstudio/nativescript/*": ["./packages/nativescript/*"],
      "@nstudio/xplat": ["./packages/xplat"],
      "@nstudio/xplat/*": ["./packages/xplat/*"],
      "@nstudio/xplat-utils": ["./packages/xplat-utils"],
      "@nstudio/xplat-utils/*": ["./packages/xplat-utils/*"],
      "@nstudio/xplat/testing": ["./packages/xplat/testing"]
    }
  },
  "exclude": [
    "tmp",
    "build",
    "packages/angular/src/schematics/*/*files/**/*",
    "packages/electron/src/schematics/*/*files/**/*",
    "packages/electron-angular/src/schematics/*/*files/**/*",
    "packages/ionic/src/schematics/*/*files/**/*",
    "packages/ionic-angular/src/schematics/*/*files/**/*",
    "packages/nativescript/src/schematics/*/*files/**/*",
    "packages/nativescript-angular/src/schematics/*/*files/**/*",
    "packages/schematics/src/schematics/*/*files/**/*",
    "packages/web/src/schematics/*/*files/**/*",
    "packages/web-angular/src/schematics/*/*files/**/*",
    "packages/xplat/src/schematics/*/*files/**/*",
    "scripts"
  ]
}
